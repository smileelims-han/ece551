#include <assert.h>

#include <cstdlib>
#include <iostream>

#include "il.hpp"

class Tester {
 public:
  // testing for default constructor is done for you
  void testDefCtor() {
    IntList il;
    assert(il.head == NULL);
    assert(il.tail == NULL);
    assert(il.getSize() == 0);
  }
  // example of another method you might want to write
  void testAddFront() {
    // WRITE ME
    IntList il;
    il.addFront(3);
    assert(il[0] == 3 && il.getSize() == 1 && il.head->next == NULL &&
           il.head->prev == NULL && il.tail == il.head);

    il.addFront(5);
    assert(il[0] == 5 && il[1] == 3 && il.getSize() == 2 && il.head->data == 5 &&
           il.head->prev == NULL && il.head->next->data == 3 &&
           il.tail->prev->data == 5 && il.tail->next == NULL && il.tail->data == 3);
  }
  // many more tester methods
  void testAddBack() {
    IntList il;
    il.addBack(5);
    assert(il[0] == 5 && il.getSize() == 1 && il.head->next == NULL &&
           il.head->prev == NULL && il.tail == il.head);
    il.addBack(3);
    assert(il[0] == 5 && il[1] == 3 && il.getSize() == 2 && il.head->data == 5 &&
           il.head->prev == NULL && il.head->next->data == 3 &&
           il.tail->prev->data == 5 && il.tail->next == NULL && il.tail->data == 3);
    il.addBack(7);
    assert(il[2]==7 && il.getSize()==3 && il.head->data==5
  }
};

int main(void) {
  Tester t;
  t.testDefCtor();
  t.testAddFront();
  // write calls to your other test methods here
  return EXIT_SUCCESS;
}
